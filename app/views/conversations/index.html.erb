 <% @conversations.each do |conversation| %>
  <div class="message">
    <img class="avatar-large" src="https://kitt.lewagon.com/placeholder/users/gabriel-dehan">
    <div class="message-name">
      <h3><%= convo_partner(conversation).full_name %></h3>
      <p><%= conversation.most_recent_message.created_at %></p>
    </div>
    <div class="message-body">
    <p><strong> <%= conversation.venue.name %></strong></p>
      <p>
        <%= conversation.most_recent_message.content %>
      </p>
    </div>
    </div>
  </div>
<% end %>
