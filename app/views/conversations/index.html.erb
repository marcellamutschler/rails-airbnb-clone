<% @conversations.each do |conversation| %>
  <%= link_to conversation_path(conversation) do %>
  <div class="message">
      <%= image_tag get_profile_photo(convo_partner(conversation)), class: "avatar" %>

    <div class="message-name">
      <h3><%= convo_partner(conversation).full_name %></h3>
      <p><%= conversation.most_recent_message.created_at %></p>
    </div>
    <div class="message-body">
    <p><strong> <%= conversation.venue.name %></strong></p>
      <p>
        <%= conversation.most_recent_message.content %>
      </p>
    </div>
  </div>
  <% end %>
<% end %>
