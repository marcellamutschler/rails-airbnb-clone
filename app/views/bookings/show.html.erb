<% content_for :title, "Booking Confirmation" %>

<hr>
<div class="booking-request"> <strong>Thank you!</strong> Your booking request for <%= @booking.venue.name %> was successful. We contacted the host - you will get the confirmation within the next three days!</div>

<div class="booking-card-new" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
  url('<%= cl_image_path @booking.venue.photos.first.path if @booking.venue.photos.first %>')">

  <div> <%= cl_image_tag @booking.venue.user.profile.photo.path, class: 'booking-owner-photo' if @booking.venue.user.profile.photo %></div>

  <div class="card-description-booking">
      <h2><%= @booking.venue.location %></h2>
      <p class="description-2" style="font-size: 25px"><%= @booking.venue.name %></p>
      <p class="description-2" style="font-size: 20px">
      <%= @booking.start_date.strftime("%b %d") if @booking.start_date %> - <%= @booking.end_date.strftime("%b %d") if @booking.end_date %><br>
      Number of hours: <%= @booking.hours.to_i %><br>
      <strong>Total price: <%= @booking.total_price.to_i %> â‚¬</strong></p>
      <p class="description-2" style="font-size: 20px">Booking status: <%= @booking.status %></p>
      <div style="margin-top: 20px"><%= link_to 'Edit Booking', edit_profile_booking_path(@booking), class: "btn-normal" %></div>
  </div>
<a> <%= link_to @booking.venue.name, venue_path(@booking.venue), class: "card-link-booking" %></a>

</div>
</div>
