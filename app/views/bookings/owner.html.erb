<h1>Manage the bookings for your venues</h1>
<br>

<% if current_user.venues.present? %>

<% current_user.venues.each do |venue| %>
 <table id="t01">

  <li><strong><%= venue.name %> in <%= venue.location %></strong></li><br>
   <% venue.bookings.each do |booking| %>

<tr style="height:120px">
  <td style="padding: 16px; text-align: center"><%= link_to profile_path(booking.user.profile) do %>
        <% if booking.user.profile.photo? %>
          <%= cl_image_tag booking.user.profile.photo.path, class: "avatar" %>
        <% elsif booking.user.facebook_picture_url.present? %>
          <%= image_tag booking.user.facebook_picture_url, class: "avatar"  %>
          <% else %>
          <%= image_tag 'https://material-components-web.appspot.com/images/animal1.svg', class: "avatar" %>
        <% end %>
      <% end %></td>
  <td><%= booking.user.profile.first_name %> <%= booking.user.profile.last_name%></td>
  <td> <%=booking.user.email%></td>
  <td> Date: <%= booking.start_date %> - <%= booking.end_date %></td>
  <td> Price: <%= booking.total_price %> â‚¬ </td>

  <td> <%= booking.status %></td>
  <td style="text-align: center"> Edit booking Status: <br><br> <%= link_to "Accept", accept_profile_booking_path(@profile, booking), class: "btn-normal"%> <%= link_to "Decline", decline_profile_booking_path(@profile, booking), class: "btn-normal" %></td>

    <% end %>
    </tr>

<% end %>
<% end %>
</table>


