
<%= simple_form_for(@profile) do |f| %>


  <% if @profile.errors %>
    <% @profile.errors.messages.each do |error|  %>
      Error: <%= error  %>
    <% end %>
  <% end %>


  <%= f.input :first_name, placeholder: 'Max' %>
  <%= f.input :last_name, placeholder: 'Mustermann' %>
  <%= f.input :bio, placeholder: 'Write here a few lines about yourself' %>
  <%= f.input :photo, as: :attachinary %>



  <%= f.submit 'Submit', class: 'btn-red' %>

<% end %>


