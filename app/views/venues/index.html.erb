<div class="filter-bar">
  <%= render 'filter' %>
</div>
<br>
<div class="container" style="margin-left: 70px; margin-top: 40px;">
  <div class="col-sm-8">
    <div style="margin-top: 50px;">
      <div class="row">
        <% @venues_with_coordinates.each do |venue| %>
        <div class="col-sm-6" >
          <div class="card_2" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
          url('<%= cl_image_path venue.photos.first.path if venue.photos.first %>')">
          <div class="card-city">
            <%= venue.city %>
          </div>
          <div class="card-price">
            <%= venue.price.to_i %> â‚¬ per hour
          </div>
          <div class="card-name">
            <h1>
              <%= venue.name %>
            </h1>
          </div>
          <div class="card-description" >
            <div class="fa fa-users" aria-hidden="true" style="color: gray; margin-top: 88px; margin-left: -10px; font-size: 17px">  <%=venue.capacity%></div>
              <div>
                <%= simple_form_for(@bookmark, url: bookmarks_path, html: {method: :post}) do |f| %>
                <%= f.hidden_field :venue_id, value: venue.id %>
                <button class="btn btn-success" style="position: relative; margin-left: 262px; margin-top: 5px" type='submit'>
                  <i class="fa fa-heart" aria-hidden="true"></i>
                </button>
                <% end %>
              </div>
          </div>
          <br>
          <a> <%= link_to venue.name, venue_path(venue), class: "card-link-2" %></a>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  <div class="map" style="width: 40%; top:105px; position: fixed; right: 0; " >
    <div>
<!-- <div style="position: fixed; top:0">
-->    <div id="map" style="width: 100%; height: 720px;"></div>
</div>
</div>
</div>
</div>
</div>
<% content_for(:after_js) do %>
<%= javascript_tag do %>
$(document).ready(function() {
var handler = Gmaps.build('Google');
handler.buildMap({
provider: {},
internal: { id: 'map' } }, function() {
markers = handler.addMarkers(<%= raw @hash.to_json %>);
handler.bounds.extendWith(markers);
handler.fitMapToBounds();
if (markers.length == 0) {
handler.getMap().setZoom(2);
} else if (markers.length == 1) {
handler.getMap().setZoom(14);
}
});
});
<% end %>
<% end %>

