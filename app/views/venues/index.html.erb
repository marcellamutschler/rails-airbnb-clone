<div class="container">
  <div class="row">
    <% @venues.each do |venue| %>


    <div class="col-sm-4">
      <div class="card">
      <%= venue.name %>
        <%= venue.location %>
        max capacity - <%= venue.capacity %> , price: <%= venue.price %> per hour, <%= venue.description %>
        <%= link_to 'Delete!', venue_path(venue), method: :delete , data: {confirm: 'Are you sure??'}%>
        <%= link_to "Edit a Venue", edit_venue_path(venue) %>
        <%= link_to 'Show this location', venue_path(venue) %>
      </div>
    </div>

    <% end %>
  </div>
</div>




