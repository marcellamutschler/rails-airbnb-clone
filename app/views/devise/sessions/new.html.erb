<div class="login_form" >
<h1 style="font-size: 50px">Log in </h1>
<br>
<%= simple_form_for(resource, as: resource_name, url: user_session_path) do |f| %>
  <div class="login-form">
    <p style="font-size: 20px">E-Mail</p>
    <%= f.input :email, required: false, label: false, autofocus: true, placeholder: "email@email.com" %>
    <p style="font-size: 20px">Password</p>
    <%= f.input :password, required: false, label: false, placeholder: "·············" %>
  </div>
  <div class="form-inputs">
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions" >
    <%= f.button :submit, "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>





